    <LinearLayout
        android:id="@+id/botesLetras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"
        android:layout_below="@+id/idLayoutImage">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="G"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="H"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="I"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
        </LinearLayout>
        
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="J"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="K"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
