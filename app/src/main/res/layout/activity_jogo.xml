                    android:layout_height="wrap_content"
                    android:text="N"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="P"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="Q"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
