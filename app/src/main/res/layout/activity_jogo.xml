                    android:text="U"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="touchLetter"
                    android:padding="2dp"
                    />
          <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="W"
